<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">
    <div class="portlet portletAudio"
         tal:define="portlet_id python:id(view)"
         i18n:domain="brasil.gov.portlets">
        <div id="${string:audio-$portlet_id}"
             class="portal-padrao-audio-portlet">
            <tal:audio tal:define="audio view/audio|nothing">
                <div class="portletHeader">
                    <span class="portletTopLeft"></span>
                    <h3 class="portlet-audio-title">
                        ${view/data/header}
                    </h3>
                    <span class="portletTopRight"></span>
                </div>
                <div class="portletItem">
                    <!-- Audio item player -->
                    <div id="${string:audio_jplayer_$portlet_id}"
                         class="jp-jplayer"
                         data-audio-url="${view/url}"
                         data-audio-title="${view/title}"
                         data-audio-description="${view/description}"
                         data-audio-credit="${view/rights}">
                    </div>
                    <div id="${string:audio_jpcontainer_$portlet_id}"
                         class="jp-audio">
                        <div class="jp-type-single">
                            <div class="jp-gui jp-interface">
                                <ul class="jp-controls">
                                    <li><a href="#" class="jp-play" title="Iniciar">Iniciar</a></li>
                                    <li><a href="#" class="jp-pause" title="Parar">Parar</a></li>
                                    <li><a href="#" class="jp-mute" title="Ativar mudo">Ativar mudo</a></li>
                                    <li><a href="#" class="jp-unmute" title="Desativar mudo">Desativar mudo</a></li>
                                    <li><a href="#" class="jp-volume-max" title="Volume máximo">Volume máximo</a></li>
                                </ul>
                                <div class="jp-progress-time-wrapper">
                                    <div class="jp-progress">
                                        <div class="jp-seek-bar">
                                            <div class="jp-play-bar"></div>
                                        </div>
                                    </div>
                                    <div class="jp-time-holder">
                                        <span class="jp-current-time"></span>/
                                        <span class="jp-duration"></span>
                                    </div>
                                </div>
                                <div class="jp-volume-bar">
                                    <div class="jp-volume-bar-value"></div>
                                </div>
                            </div>
                            <div class="jp-no-solution">
                                <span>Atualização Necessária</span>
                                Para iniciar o conteúdo com som é necessário atualizar o navegar
                                para a versão mais recente do plugin do
                                <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash</a>.
                            </div>
                        </div>
                    </div>

                </div>
                <div class="portletFooter">
                </div>

            </tal:audio>
        </div>
    </div>
</html>
